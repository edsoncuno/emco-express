{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "./build",
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules"
  ]
}